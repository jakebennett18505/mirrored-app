---
import ArtCard from "../components/ArtCard.astro";
import artList from "../pages/artwork/artList.json";
---

<div class="masonry">
  {
    artList.map((artList) => {
      return <ArtCard title={artList.title} image={artList.image_url} />;
    })
  }
</div>

<style>
  .masonry {
    /* Masonry container */
    -webkit-column-count: 4;
    -moz-column-count: 4;
    column-count: 4;
    -webkit-gap: 3em;
    -moz-gap: 3em;
    gap: 3em;
  }

  @media only screen and (max-width: 30em) {
    .masonry {
      -moz-column-count: 1;
      -webkit-column-count: 1;
      column-count: 1;
    }
  }

  @media only screen and (min-width: 30em) {
    .masonry {
      -moz-column-count: 2;
      -webkit-column-count: 2;
      column-count: 2;
    }
  }
  @media only screen and (min-width: 45em) {
    .masonry {
      -moz-column-count: 3;
      -webkit-column-count: 3;
      column-count: 3;
    }
  }
  @media only screen and (min-width: 65em) {
    .masonry {
      -moz-column-count: 4;
      -webkit-column-count: 4;
      column-count: 4;
    }
  }
</style>
