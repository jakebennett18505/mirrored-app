---
export interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;
---

<div class="item">
    <img src={image} />
    <p class="fs-700 fw-500">{title}</p>
    <p class="fs-300">Artist name</p>
    <p class="fs-200">Oil on Canvas | 40cm X 60cm</p>
</div>

<style>
  .item {
    display: inline-block;
    margin-block: 1.5em;
    background: #fff;
    width: 100%;
    -webkit-transition: 1s ease all;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
  }
  .item img {
    max-width: 100%;
  }
</style>
